<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/live_lv2_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_live_lv_height"
    android:padding="@dimen/activity_live_lv_padding"
    android:orientation="vertical">

    <TextView
        android:id="@+id/live_lv2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="@dimen/activity_live_lv2_titlesize"
        android:textColor="@color/activity_live_titleColor" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/live_lv2_starttime"
        android:textColor="@color/activity_live_titleColor"
        android:textSize="@dimen/activity_live_lv2_teamsize"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/live_lv2_ivleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:id="@+id/live_lv2_tvleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/activity_live_lv2_teamsize"
                android:textColor="@color/activity_live_titleColor" />

        </LinearLayout>

        <TextView
            android:layout_gravity="center"
            android:id="@+id/live_lv2_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="@dimen/activity_live_lv2_scoresize"
            android:textColor="@color/activity_live_titleColor" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/live_lv2_ivright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:id="@+id/live_lv2_tvright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/activity_live_lv2_teamsize"
                android:textColor="@color/activity_live_titleColor" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>