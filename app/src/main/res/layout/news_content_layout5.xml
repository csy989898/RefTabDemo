<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/news_lv_normal_height"
    android:weightSum="3">

    <ImageView
        android:paddingLeft="@dimen/news_lv_padding"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/news_lv5_iv"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <TextView
            android:padding="@dimen/news_lv_padding"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/news_lv5_title"
            android:textSize="@dimen/news_lv_titlesize"
            android:textColor="@color/news_lv_titleColor"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:padding="@dimen/news_lv_padding"
            android:id="@+id/news_lv5_source"
            android:textSize="@dimen/news_lv_sourcesize"
            android:textColor="@color/news_lv_sourceColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:gravity="center"
            android:padding="@dimen/news_lv_padding"
            android:textSize="@dimen/news_lv_sourcesize"
            android:textColor="@color/news_lv_sourceColor"
            android:drawableRight="@drawable/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/news_lv5_comments"/>



    </LinearLayout>



    </RelativeLayout>



</LinearLayout>