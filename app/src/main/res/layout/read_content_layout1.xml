<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/read_lv_normal_height"
    android:padding="@dimen/read_lv_padding"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/read_lv1_iv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
         />

    <RelativeLayout
        android:paddingLeft="@dimen/read_lv_padding"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/read_lv_titlesize"
            android:textColor="@color/read_lv_titleColor"
            android:id="@+id/read_lv1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">


            <TextView
                android:textColor="@color/read_lv_sourceColor"
                android:textSize="@dimen/read_lv_sourcesize"
                android:id="@+id/read_lv1_recommendChannel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/read_lv1_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/comment"
                android:gravity="center"
                android:textColor="@color/read_lv_sourceColor"
                android:textSize="@dimen/read_lv_sourcesize" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>