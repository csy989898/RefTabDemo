<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_lv_normal_height"
    android:padding="@dimen/search_lv_padding"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/search_lv3_iv"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

        <LinearLayout
            android:padding="@dimen/search_lv_padding"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/search_lv3_play_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/channel_right_image_icon"/>

        <TextView
            android:id="@+id/search_lv3_videoLen"
            android:layout_marginLeft="@dimen/search_lv_playmargin"
            android:gravity="center"
            android:textSize="@dimen/search_lv_sourcesize"
            android:textColor="@color/search_lv_videotimeColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:paddingLeft="@dimen/search_lv_padding"
        android:paddingRight="@dimen/search_lv_padding"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent">

        <TextView
            android:textStyle="bold"
            android:textColor="@color/search_lv_titleColor"
            android:textSize="@dimen/search_lv_titlesize"
            android:id="@+id/search_lv3_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/search_lv_sourceColor"
            android:textSize="@dimen/search_lv_sourcesize"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_lv3_source"/>


    </RelativeLayout>





</LinearLayout>